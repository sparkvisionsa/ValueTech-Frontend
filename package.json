{
  "name": "electron-python-app",
  "version": "1.0.0",
  "description": "Electron + Python desktop app",
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "main": "src/main.js",
  "scripts": {
    "build": "webpack --mode production",
    "build-react": "npm run build",
    "dev": "node build-scripts/dev_runner.js",
    "dev:renderer": "webpack --mode development --watch --stats=errors-warnings",
    "dev:electron": "electron .",
    "build-py-worker": "bash build-scripts/build_py_worker.sh",
    "prepare-build": "npm run build-react && npm run build-py-worker",
    "dist-linux": "npm run prepare-build && electron-builder --linux --x64",
    "build-win": "powershell -ExecutionPolicy Bypass -File build-scripts\\build_win_release.ps1",
    "dist-win": "npm run build-win"
  },
  "build": {
    "productName": "AutomationApp",
    "appId": "com.example.automationapp",
    "files": [
      "dist/**/*",
      "src/**/*",
      "preload.js",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "build/python_exe",
        "to": "python_exe",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "build/win_python_exe",
        "to": "python_exe",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "dist",
        "to": "dist",
        "filter": [
          "**/*"
        ]
      }
    ],
    "linux": {
      "target": [
        "AppImage"
      ],
      "artifactName": "${name}-${version}-${arch}.${ext}"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "artifactName": "${name}-setup-${version}.${ext}"
    },
    "directories": {
      "output": "release"
    },
    "afterPack": "build/afterPack.js"
  },
  "dependencies": {
    "@napi-rs/canvas": "^0.1.84",
    "axios": "^1.13.2",
    "docx": "^9.5.1",
    "dotenv": "^17.2.3",
    "exceljs": "^4.4.0",
    "i18next": "^25.7.3",
    "lucide-react": "^0.554.0",
    "pizzip": "^3.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^16.5.0",
    "react-router-dom": "^7.12.0",
    "socket.io-client": "^4.7.5"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "autoprefixer": "^10.4.22",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "electron": "^39.2.1",
    "electron-builder": "^24.9.1",
    "html-webpack-plugin": "^5.6.4",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.18",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  }
}
